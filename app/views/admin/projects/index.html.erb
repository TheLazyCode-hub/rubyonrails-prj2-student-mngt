<p id="notice"><%= notice %></p>

<div class="d-flex flex-row justify-content-between mb-3 ">
<h1 class="h1 mb-2 text-gray-800">Projects</h1>
</div>


<div class="card shadow">
  <div class="card-header pb-0 d-flex flex-row justify-content-between ">
    <h6 class="mt-2 font-weight-bold text-primary">Project Details</h6>
    <%= link_to 'New Project', new_admin_project_path, class:"btn btn-primary mb-1" %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-bordered table-striped dataTable" id="dataTable">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @projects.each do |project| %>
                  <tr>
                    <td><%= link_to project.name, admin_project_path(project) %></td>
                    <td><%= project.description %></td>
                    <td><%= link_to 'Edit', edit_admin_project_path(project) %></td>
                    <td><%= link_to 'Delete', admin_project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
