<p id="notice"><%= notice %></p>

<div class="d-flex flex-row justify-content-between mb-3 ">
<h1 class="h1 mb-2 text-gray-800">Blogs</h1>
</div>

<div class="card shadow">
  <div class="card-header pb-0 d-flex flex-row justify-content-between ">
    <h6 class="mt-2 font-weight-bold text-primary">Blog Details</h6>
    <%= link_to 'New Blog', new_admin_blog_path, class:"btn btn-primary mb-1" %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
        
        <div class="row">
          <div class="col-sm-12 col-md-6">
          </div>
          <div class="col-sm-12 col-md-6">
            <div id="dataTable_filter" class="dataTables_filter">
              <%= search_form_for @q, url: admin_blogs_url do |f| %>
                  <%= f.label :title %>
                  <%= f.search_field :title_cont, class:"form-control form-control-sm" %>
               <%= f.submit class:"btn btn-sm btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>

        
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-bordered table-striped dataTable" id="dataTable">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Content</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @blogs.each do |blog| %>
                  <tr>
                    <td><%= link_to blog.title, admin_blog_path(blog) %></td>
                    <td><%= blog.content %></td>
                    <td><%= link_to 'Edit', edit_admin_blog_path(blog) %></td>
                    <td><%= link_to 'Destroy', admin_blog_path(blog), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        
        <div class="row">
          <div class="col-sm-12 col-md-6">
            <div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite">
              <%= page_entries_info @blogs, entry_name: 'students' %>
            </div>
          </div>
          <div class="col-sm-12 col-md-6 ">
            <div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
              <%= paginate @blogs, window: 2 %>
            
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>
